{
  "name": "rogue-trader-generator-tools",
  "version": "2.0.2",
  "description": "Electron-based Rogue Trader RPG system and content generator",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "debug": "electron . --dev --no-sandbox --inspect=5858",
    "debug-brk": "electron . --dev --no-sandbox --inspect-brk=5858",
    "build": "electron-builder",
    "test": "node tests/runParity.js",
    "parity-test": "node tests/runParity.js",
    "validate": "node scripts/validate.js",
    "validate:ps": "powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -File scripts/validate.ps1",
    "test:xenos": "node tests/runXenosTests.js"
  },
  "keywords": [
    "rogue-trader",
    "rpg",
    "generator",
    "warhammer-40k"
  ],
  "author": "Rogue Trader Generator Tools",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TiLT42/RogueTraderGeneratorTools.git"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^25.1.8",
    "jsdom": "^27.1.0"
  },
  "dependencies": {
    "@tabler/icons": "^3.35.0",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.tilt42.rogue-trader-generator-tools",
    "productName": "Rogue Trader Generator Tools",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!tests/**/*",
      "!scripts/**/*",
      "!*.md",
      "!.*",
      "!dist/**/*",
      "!bug-demo.html",
      "!rich-text-notes-demo.html",
      "!subtle-selection-demo.html",
      "!test-selection.html",
      "!test_graveyard.html",
      "!test_modal_fix.html"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "Rogue-Trader-Generator-Tools-Windows-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png",
      "artifactName": "Rogue-Trader-Generator-Tools-macOS-${arch}-${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "artifactName": "Rogue-Trader-Generator-Tools-Linux-${version}.${ext}"
    }
  }
}
